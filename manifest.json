{
  "name":"王宇的插件",
  "version":"1.0",
  "manifest_version":2,
  "description":"这是第一个chrome插件",
  //加了这行才可以正常设置网页背景颜色
  "permissions":[ 
    "tabs","http://*/*","https://*/*",
    "notifications",
    "debugger"
  ],
  "browser_action":{
    "default_title":"set the page's color.",
    "default_icon":"icon.png"
    //"default_popup":"popup.html"
  },
  "content_scripts":[{
    "matches":["http://*/*"],
    "js":["content_scripts/content_script.js"],
    "css":["content_scripts/cs.css"]
  }],
  "web_accessible_resources":[
    "images/smile.gif",
    "content_scripts/sprite.gif",
    "content_scripts/sprite.png"
  ],
  "background":{
    "scripts":["background.js"]
  //  //"persistent":false
  },
  "options_page":"options.html"
}
